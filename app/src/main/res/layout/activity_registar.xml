<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    android:padding="20dp"
    tools:context="com.pcdgroup.hp.pcd_group.UserLoginRegister.UserRegistarActivity">

    <TextView
        android:text="Signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/White"/>

    <EditText
        android:id="@+id/editTextF_Name"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/et_bg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="20dp"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Your First Name"
        android:inputType="textPersonName" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/et_bg"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editTextF_Name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/editTextL_Name"
        android:hint="Enter Your Last Name"
        android:gravity="center"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/et_bg"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editTextL_Name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/editTextL_mobile"
        android:hint="Enter Your mobile No"
        android:gravity="center"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/et_bg"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_below="@+id/editTextL_mobile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/editTextEmail"
        android:hint="Enter Your Email"
        android:gravity="center"/>


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/et_bg"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/editTextEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/editTextPassword"
        android:hint="Enter Your Password"
        android:gravity="center"/>

    <Button
        android:id="@+id/Submit"
        style="@style/Base.Animation.AppCompat.Tooltip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#7B68EE"
        android:onClick="onClickUserRegister"
        android:text="Register" />

</RelativeLayout>